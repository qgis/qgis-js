{
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@8.7.5",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "compile": "pnpm run compile:dev",
    "compile:dev": "cmake --build build-wasm",
    "compile:debug": "cmake --build build-wasm -DCMAKE_BUILD_TYPE=Debug",
    "compile:release": "cmake --build build-wasm -DCMAKE_BUILD_TYPE=Release",
    "build": "pnpm -r --filter=./packages/** run build",
    "dev": "pnpm --filter @qgis-js/dev dev",
    "site": "vite dev",
    "lint": "npm run lint:prettier && npm run lint:clang-format",
    "lint:prettier": "npx prettier . --write",
    "lint:pretty-quick": "pretty-quick --staged",
    "lint:clang-format": "clang-format -i \"--glob=src/**/*.{cpp,hpp}\""
  },
  "devDependencies": {
    "pnpm": "8.7.5",
    "prettier": "3.0.3",
    "pretty-quick": "3.1.3",
    "clang-format": "1.8.0"
  }
}
